// the tp module implements functions and types
// regarding the lichen type system

pub type nat    = u8  | u16 | u32 | u64;
pub type int    = i8  | i16 | i32 | i64;
pub type float  = f32 | f64;
pub type number = nat | int | float;

pub type text   = str | cstr;

pub type array  = []u8  | []u16 | []u32 | []u64
                | []i8  | []i16 | []i32 | []i64
                | []f32 | []f64 | []str | []cstr;
